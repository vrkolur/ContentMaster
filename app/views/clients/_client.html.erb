<div class="card mb-4" id="client-card-<%= client.id %>">
  <div class="card-body">
      <h5 class="card-title text-center"><%= client.name %></h5>

      <%client_image_attached(client) do%>
        <%= image_tag(client.background_image, style: "width: 150px; height: 100px", class: "d-flex card-img-top mb-3") %>
      <% end %>
      <p class="card-text"><strong>Sub Domain:</strong> <%= client.sub_domain %></p>
      <p class="card-text is-active" data-client-id="<%= client.id %>"> <strong>Active:</strong> <span data-client-id="<%= client.id %>" class="btn btn-sm btn-primary" id="client_active_status"><%= client.is_active ? 'Yes': 'No' %></span></p>
      <div id="edit-form-container-<%= client.id %>"></div>
      <%client_admin_empty(client) do%>
        <%= link_to "New Client Admin", new_client_user_path(client_id: client.sub_domain), class: "btn btn-primary btn-sm" %>
      <% end %>
      <div class="row d-flex align-items-end  justify-content-between">
      <%= link_to "Edit", edit_client_path(client.id), class: "btn btn-primary btn-sm col-5 mr-1  h-100" %>
      <button class="btn btn-danger mt-0 btn-sm delete-client-bt mt-3  ml-1 col-5 h-100" data-client-id="<%= client.id %>">Delete</button>
      </div>
  </div>
</div>


<script>
    $(() => {
      $("p.is-active > span").on("click", (event)=>{
        event.stopImmediatePropagation();
        const clientID = $(event.target).attr("data-client-id")
        // console.log(clientID);
        $.ajax({
          type: "post",
          url: `/clients/${clientID}/change_client_active_status`,
          success: function (response) {
            const txt = $(event.target).html();
            const res_txt = txt == "Yes" ? "No" : "Yes";
            $(event.target).html(res_txt);
          }
        });
      })
    });


  $(document).ready(function () {
    $('.delete-client-bt').click(function(event){
      event.stopImmediatePropagation();
      var clientId = $(this).attr('data-client-id')
      // console.log(clientId); 
      $.ajax({
        url: "/clients/"+clientId,
        method: "DELETE",
        success: function (response) {
          // console.log(response);
        $('#client-card-'+clientId).remove();
        }
      });
    })
  });

</script>

