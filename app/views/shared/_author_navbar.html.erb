<nav class="navbar navbar-expand-lg navbar-light bg-light">
 <div class="container-fluid">
    <%= link_to "Home", client_articles_path(client_id: client.sub_domain) ,class:"navbar-brand"%>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "New Article",new_article_path(client_id: client.sub_domain),class:"nav-link" %>
        </li>
        <li class="nav-item">
          <div id="edit-sub-domain-modal" style="display: none;">
            <input type="text" id="sub-domain-input" placeholder="Enter new sub-domain">
            <button id="save-sub-domain">Save</button>
          </div>
        </li>
        <li class="nav-item">
          <%= button_to "Logout", destroy_user_session_path(client_id: client.sub_domain),method: :delete,class:"btn btn-danger btn-sm" %>
        </li>
      </ul>
    </div>
    <div class="notifications-container" id="assignedNotifications"> 
      <button class="btn btn-primary btn-sm notificationButton" data-client-name="<%=client.sub_domain%>">Notifications</button>
      <div class="notification-template" style="display:none;">
          <p>New Notification</p>
          <div class="notifications">
          </div>
      </div>
    </div>
 </div>
</nav>

<script>
// /:client_id/notifications
$(document).ready(function () {
  $('#assignedNotifications').click(function (e) { 
    e.preventDefault();
    var clientName = $('.notificationButton').data('client-name');
    console.log(clientName);
    $.ajax({
      url: `/${clientName}/all_messages`,
      method: 'GET',
      success: function (response) {
        // console.log(response);
        var notifications = $(response).find('.notification');
        console.log(notifications);
        var targetDiv = $('.notification-template.notifications');
        notifications.each(function() {
          targetDiv.append($(this));
        });
        $('.notification-template').css('display', 'block');
      }
    });
  });
});


</script>